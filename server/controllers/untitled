/**
 *  Username exists
 *  Returns Boolean or Error
 *  
 */
exports.findByEmail = function (userMail) {
  User.findOne({ email : userMail }, function (err, user) {
    if (err) {
      return json({Status: "Error", Value: err});
    }
    if(user) {
      return json(Status: "Success", Value: true});
    } else {
      return json(Status: "Success", Value: false});
    }
  });
}